@model IEnumerable<Prog7311_Part2.Models.Product>

@{
    ViewData["Title"] = "My Products";
}

<style>
    /* Container and Body Styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fb; /* Light greyish-blue background */
        color: #333;
    }

    .container {
        margin-top: 30px;
    }

    .card {
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #1976d2; /* Primary Blue */
        color: white;
        font-weight: bold;
        padding: 20px;
    }

    .card-body {
        padding: 20px;
    }

    .btn {
        border-radius: 0.5rem;
        padding: 0.8rem;
        font-weight: bold;
    }

    .btn-success {
        background-color: #66bb6a; /* Green */
        border-color: #66bb6a;
    }

    .btn-success:hover {
        background-color: #388e3c; /* Darker Green */
        border-color: #388e3c;
    }

    .btn-warning {
        background-color: #ffb74d; /* Light Orange */
        border-color: #ffb74d;
    }

    .btn-warning:hover {
        background-color: #f57c00; /* Dark Orange */
        border-color: #f57c00;
    }

    .btn-secondary {
        background-color: #546e7a; /* Greyish Blue */
        border-color: #546e7a;
    }

    .btn-secondary:hover {
        background-color: #2c3e50; /* Dark Greyish Blue */
        border-color: #2c3e50;
    }

    .table {
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .table thead {
        background-color: #e3f2fd; /* Light Blue */
    }

    .table th, .table td {
        padding: 1rem;
        text-align: center;
    }

    .table img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 0.5rem;
    }

    .table tr:hover {
        background-color: #f1f1f1;
    }

    .alert-info {
        background-color: #e3f2fd; /* Light Blue */
        color: #0277bd;
        border-radius: 0.5rem;
        padding: 1rem;
    }

    .alert-info a {
        font-weight: bold;
        color: #0277bd;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2>My Products</h2>
                    <a asp-action="AddProduct" class="btn btn-success">Add New Product</a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Production Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                {
                                                    <img src="@product.ImageUrl" alt="@product.Name" class="img-thumbnail" />
                                                }
                                                else
                                                {
                                                    <span>No image</span>
                                                }
                                            </td>
                                            <td>@product.Name</td>
                                            <td>@product.Category</td>
                                            <td>R @product.Price.ToString("F2")</td>
                                            <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p>You haven't added any products yet. <a asp-action="AddProduct">Add your first product</a>.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>
