@model Prog7311_Part2.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<style>
    /* Updated Body Styling */
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #f2c2f2, #a8d0ff); /* Soft gradient background */
        background-attachment: fixed;
        background-size: cover;
        color: #333;
    }

    .container {
        margin-top: 20px;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.9); /* Transparent white background */
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #6a1b9a; /* Purple */
        color: white;
        font-weight: bold;
    }

    .form-control {
        border-radius: 0.5rem;
        padding: 0.8rem;
        font-size: 1rem;
        border: 1px solid #e0e0e0;
    }

    .form-group label {
        font-size: 1.1rem;
        color: #333;
    }

    .btn {
        border-radius: 0.5rem;
        padding: 0.8rem;
        font-weight: bold;
        width: 100%;
    }

    .btn-primary {
        background-color: #ff7043; /* Orange */
        border-color: #ff7043;
    }

        .btn-primary:hover {
            background-color: #ff5722; /* Lighter Orange */
            border-color: #ff5722;
        }

    .btn-secondary {
        background-color: #0d47a1; /* Navy Blue */
        border-color: #0d47a1;
    }

        .btn-secondary:hover {
            background-color: #1976d2; /* Lighter Navy Blue */
            border-color: #1976d2;
        }

    .alert-danger {
        background-color: #f8d7da; /* Light Pink */
        color: #721c24;
        border-color: #f5c6cb;
    }

        .alert-danger ul {
            margin: 0;
            padding-left: 1.5rem;
        }

        .alert-danger li {
            list-style-type: none;
        }

    .input-group-text {
        background-color: #f8f9fa;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>Add New Product</h2>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <strong>Error!</strong> Please fix the following issues:
                            <ul>
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="AddProduct" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Product Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label">Category</label>
                            <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<Prog7311_Part2.Models.ProductCategory>()">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="control-label">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">R</span>
                                <input asp-for="Price" class="form-control" required min="0.01" step="0.01" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProductionDate" class="control-label">Production Date</label>
                            <input asp-for="ProductionDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            <span asp-validation-for="ProductionDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="control-label">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                            <button type="submit" class="btn btn-primary">Add Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Add client-side validation
        $(document).ready(function() {
            $('form').submit(function(e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    console.log('Form validation failed');
                } else {
                    console.log('Form validation passed, submitting form');
                }
            });
        });
    </script>
}
